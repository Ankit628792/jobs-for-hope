{
  "name": "backend",
  "version": "1.0.0",
  "description": "Jobs for Hope",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "npm start --prefix ../frontend",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "standard --verbose",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "templates/**",
      "client/**",
      "venv/**",
      "node-modules/**"
    ],
    "env": {
      "mocha": true
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "node-fetch": "^2.3.0",
    "sqlite3": "^4.0.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "s": "^0.1.1",
    "standard": "^12.0.1"
  }
}
